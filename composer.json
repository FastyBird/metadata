{
  "name" : "fastybird/metadata",
  "type" : "library",
  "description" : "FastyBird metadata reader & validator for modules, plugins & etc. used by FastyBird applications",
  "keywords" : [
    "fastybird",
    "fb",
    "libs",
    "library",
    "metadata",
    "modules",
    "plugins",
    "connectors"
  ],

  "homepage" : "https://www.fastybird.com",

  "license" : "Apache-2.0",

  "authors" : [
    {
      "name" : "FastyBird s.r.o.",
      "email" : "code@fastybird.com",
      "homepage" : "https://www.fastybird.com"
    },
    {
      "name" : "Adam Kadlec",
      "email" : "adam.kadlec@fastybird.com"
    }
  ],

  "support" : {
    "email" : "code@fastybird.com",
    "issues" : "https://github.com/FastyBird/metadata/issues",
    "source" : "https://github.com/FastyBird/metadata"
  },

  "prefer-stable" : true,

  "minimum-stability" : "stable",

  "require" : {
    "php" : ">=8.1.0",
    "ipub/doctrine-consistence" : "^0.4",
    "ipub/phone" : "^2.3",
    "nette/bootstrap" : "^3.1",
    "nette/di" : "^3.0",
    "nette/utils" : "^3.2",
    "phpdocumentor/reflection" : "^4.0",
    "phpdocumentor/reflection-common" : "^2.2",
    "opis/json-schema" : "^2.3",
    "ramsey/uuid" : "^4.5"
  },

  "require-dev" : {
    "brianium/paratest" : "^6.6",
    "dg/bypass-finals" : "^1.4",
    "infection/infection" : "^0.26",
    "orisai/coding-standard" : "^3.2",
    "pds/skeleton" : "^1.0",
    "php-parallel-lint/php-parallel-lint" : "^1.3",
    "phpstan/extension-installer" : "^1.1",
    "phpstan/phpstan" : "^1.8",
    "phpstan/phpstan-deprecation-rules" : "^1.0",
    "phpstan/phpstan-nette" : "^1.1",
    "phpstan/phpstan-phpunit" : "^1.1",
    "phpstan/phpstan-strict-rules" : "^1.4",
    "phpunit/phpunit" : "^9.5",
    "staabm/annotate-pull-request-from-checkstyle" : "^1.8",
    "tracy/tracy" : "^2.9"
  },

  "autoload" : {
    "psr-4" : {
      "FastyBird\\Metadata\\" : "src/"
    }
  },

  "autoload-dev" : {
    "psr-4" : {
      "FastyBird\\Metadata\\Tests\\Cases\\Unit\\" : "tests/cases/unit",
      "FastyBird\\Metadata\\Tests\\Fixtures\\" : "tests/fixtures"
    }
  },

  "config" : {
    "sort-packages" : true,
    "allow-plugins" : {
      "dealerdirect/phpcodesniffer-composer-installer" : true,
      "phpstan/extension-installer" : true,
      "infection/extension-installer" : true
    }
  }
}
