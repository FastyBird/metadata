{
  "$schema" : "http://json-schema.org/draft-07/schema#",
  "definitions" : {
    "types" : {
      "nullable_string" : {
        "oneOf" : [
          {
            "type" : "null"
          },
          {
            "type" : "string"
          }
        ]
      },
      "nullable_number" : {
        "oneOf" : [
          {
            "type" : "null"
          },
          {
            "type" : "number"
          }
        ]
      }
    },
    "connector_type" : {
      "type" : "string",
      "enum" : [
        "fb-bus",
        "fb-mqtt"
      ]
    }
  },
  "type" : "object",
  "properties" : {
    "id" : {
      "type" : "string",
      "description" : "Entity uuid v4 identifier. This identifier is unique"
    },
    "type" : {
      "$ref" : "#/definitions/connector_type"
    },
    "device" : {
      "type" : "string",
      "description" : "Device unique uuid v4 identifier used across services"
    },
    "connector" : {
      "type" : "string",
      "description" : "Connector unique uuid v4 identifier used across services"
    }
  },
  "if" : {
    "properties" : {
      "type" : {
        "const" : "fb-bus"
      }
    }
  },
  "then" : {
    "properties" : {
      "address" : {
        "$ref" : "#/definitions/types/nullable_number",
        "default" : null
      },
      "max_packet_length" : {
        "$ref" : "#/definitions/types/nullable_number",
        "default" : null
      },
      "description_support" : {
        "type" : "boolean",
        "default" : false
      },
      "settings_support" : {
        "type" : "boolean",
        "default" : false
      },
      "configured_key_length" : {
        "$ref" : "#/definitions/types/nullable_number",
        "default" : null
      }
    },
    "required" : [
      "id",
      "type",
      "connector",
      "device",
      "address",
      "max_packet_length",
      "description_support",
      "settings_support",
      "configured_key_length"
    ]
  },
  "else" : {
    "if" : {
      "properties" : {
        "type" : {
          "const" : "fb-mqtt"
        }
      }
    },
    "then" : {
      "properties" : {
        "username" : {
          "$ref" : "#/definitions/types/nullable_string",
          "default" : null
        }
      },
      "required" : [
        "id",
        "type",
        "connector",
        "device",
        "username"
      ]
    },
    "else" : {
      "required" : [
        "id",
        "type",
        "connector",
        "device"
      ]
    }
  }
}
