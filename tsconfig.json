{
  "compilerOptions" : {
    "target" : "esnext",
    "module" : "esnext",
    "strict" : true,
    "declaration" : true,
    "declarationDir" : "dist/dts",
    "emitDeclarationOnly" : true,
    "noUnusedLocals" : true,
    "noUnusedParameters" : true,
    "importHelpers" : true,
    "moduleResolution" : "node",
    "experimentalDecorators" : true,
    "esModuleInterop" : true,
    "allowSyntheticDefaultImports" : true,
    "sourceMap" : true,
    "resolveJsonModule" : true,
    "baseUrl" : ".",
    "types" : [
      "node"
    ],
    "paths" : {
      "@/*" : [
        "public/*"
      ]
    },
    "lib" : [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "exclude" : [
    "node_modules",
    "dist"
  ]
}
