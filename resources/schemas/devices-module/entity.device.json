{
  "$schema" : "http://json-schema.org/draft-07/schema#",
  "definitions" : {
    "types" : {
      "nullable_string" : {
        "oneOf" : [
          {
            "type" : "null"
          },
          {
            "type" : "string"
          }
        ]
      }
    },
    "hardware_manufacturer" : {
      "type" : "string",
      "enum" : [
        "generic",
        "fastybird",
        "itead",
        "ai_thinker"
      ]
    },
    "firmware_manufacturer" : {
      "type" : "string",
      "enum" : [
        "generic",
        "fastybird"
      ]
    },
    "device_model" : {
      "type" : "string",
      "enum" : [
        "custom",

        "sonoff_basic",
        "sonoff_rf",
        "sonoff_th",
        "sonoff_sv",
        "sonoff_slampher",
        "sonoff_s20",
        "sonoff_touch",
        "sonoff_pow",
        "sonoff_pow_r2",
        "sonoff_dual",
        "sonoff_dual_r2",
        "sonoff_4ch",
        "sonoff_4ch_pro",
        "sonoff_rf_bridge",
        "sonoff_b1",
        "sonoff_led",
        "sonoff_t1_1ch",
        "sonoff_t1_2ch",
        "sonoff_t1_3ch",
        "sonoff_s31",
        "sonoff_sc",
        "sonoff_sc_pro",
        "sonoff_ps_15",

        "ai_thinker_ai_light",

        "fastybird_wifi_gw",
        "fastybird_3ch_power_strip_r1",
        "8ch_buttons",
        "16ch_buttons"
      ]
    }
  },
  "type" : "object",
  "properties" : {
    "id" : {
      "type" : "string",
      "description" : "Entity uuid v4 identifier. This identifier is unique"
    },
    "key" : {
      "type" : "string",
      "description" : "Unique identifier per each entity"
    },
    "identifier" : {
      "type" : "string"
    },
    "name" : {
      "$ref" : "#/definitions/types/nullable_string",
      "default" : null
    },
    "comment" : {
      "$ref" : "#/definitions/types/nullable_string",
      "default" : null
    },
    "enabled" : {
      "type" : "boolean",
      "default" : false
    },
    "hardware_version" : {
      "$ref" : "#/definitions/types/nullable_string",
      "default" : null
    },
    "hardware_manufacturer" : {
      "$ref" : "#/definitions/hardware_manufacturer"
    },
    "hardware_model" : {
      "$ref" : "#/definitions/device_model"
    },
    "mac_address" : {
      "$ref" : "#/definitions/types/nullable_string",
      "default" : null
    },
    "firmware_manufacturer" : {
      "$ref" : "#/definitions/firmware_manufacturer"
    },
    "firmware_version" : {
      "$ref" : "#/definitions/types/nullable_string",
      "default" : null
    },
    "control" : {
      "type" : "array",
      "items" : {
        "type" : "string"
      },
      "required" : [],
      "default" : []
    },
    "owner" : {
      "type" : "string",
      "description" : "Device owner uuid v4 identifier"
    }
  },
  "required" : [
    "id",
    "key",
    "identifier",
    "name",
    "comment",
    "enabled",
    "hardware_version",
    "hardware_manufacturer",
    "hardware_model",
    "mac_address",
    "firmware_manufacturer",
    "firmware_version",
    "control"
  ]
}
