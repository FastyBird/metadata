{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "format": "uuid",
      "description": "Entity unique uuid v4 identifier"
    },
    "first_name": {
      "type": "string"
    },
    "last_name": {
      "type": "string"
    },
    "middle_name": {
      "oneOf": [
        {
          "type": "null"
        },
        {
          "type": "string"
        }
      ],
      "default": null
    },
    "email": {
      "oneOf": [
        {
          "type": "null"
        },
        {
          "type": "string",
          "format": "email"
        }
      ],
      "default": null
    },
    "language": {
      "type": "string"
    },
    "state": {
      "type": "string",
      "enum": [
        "active",
        "blocked",
        "deleted",
        "not_activated",
        "approval_waiting"
      ]
    },
    "registered": {
      "oneOf": [
        {
          "type": "null"
        },
        {
          "type": "string",
          "format": "date-time"
        }
      ],
      "default": null
    },
    "last_visit": {
      "oneOf": [
        {
          "type": "null"
        },
        {
          "type": "string",
          "format": "date-time"
        }
      ],
      "default": null
    },
    "roles": {
      "type": "array",
      "minItems": 1,
      "uniqueItems": true,
      "items": {
        "type": "string"
      }
    },
    "parent": {
      "oneOf": [
        {
          "type": "null"
        },
        {
          "type": "string",
          "format": "uuid"
        }
      ],
      "description": "Entity parent unique uuid v4 identifier",
      "default": null
    },
    "children": {
      "type": "array",
      "uniqueItems": true,
      "items": {
        "type": "string",
        "format": "uuid"
      },
      "description": "Entity children uuid v4 identifiers",
      "default": []
    }
  },
  "required": [
    "id",
    "first_name",
    "last_name",
    "middle_name",
    "state",
    "registered",
    "last_visit",
    "email",
    "language",
    "roles"
  ]
}
