{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "format": "uuid",
      "description": "Entity unique uuid v4 identifier"
    },
    "name": {
      "type": "string"
    },
    "trigger": {
      "type": "string",
      "format": "uuid",
      "description": "Trigger unique uuid v4 identifier"
    },
    "owner": {
      "oneOf": [
        {
          "type": "null"
        },
        {
          "type": "string",
          "format": "uuid"
        }
      ],
      "description": "Entity owner uuid v4 identifier"
    }
  },
  "required": [
    "id",
    "name",
    "trigger"
  ]
}
