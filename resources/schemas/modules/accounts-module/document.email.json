{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "format": "uuid",
      "description": "Document unique uuid v4 identifier"
    },
    "address": {
      "type": "string",
      "format": "email",
      "description": "Email address like: john@doe.com"
    },
    "default": {
      "type": "boolean",
      "default": false
    },
    "verified": {
      "type": "boolean",
      "default": false
    },
    "private": {
      "type": "boolean",
      "default": false
    },
    "public": {
      "type": "boolean",
      "default": false
    },
    "account": {
      "type": "string",
      "format": "uuid",
      "description": "Email owner account unique uuid v4 identifier"
    }
  },
  "required": [
    "id",
    "address",
    "default",
    "verified",
    "private",
    "public",
    "account"
  ]
}
